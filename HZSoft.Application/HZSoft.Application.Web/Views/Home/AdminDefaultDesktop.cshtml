            $.ajax({
                type: "POST",
                url: "/ReportManage/Dms/GetDateLiang_Share",
                success: function (data) {
                    if (data) {
                        var seriesData = new Array();
                        var result = JSON.parse(data);
                        for (var j = 0; j < result.length; j++) {
                            seriesData[j] = new Array();
                            seriesData[j][0] = result[j].fullname;
